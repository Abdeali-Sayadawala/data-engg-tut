pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Pull the git repo
                cleanWs()
                checkout scm
            }
        }
        stage('Preparing codebase'){
            steps {
                script{
                    dir('scritps'){
                        sh '''
                            for directory in */; do
                                echo "${directory%?}"
                                echo pwd
                                zip -r ${directory%?}.zip ./$directory
                                aws s3 cp ${directory%?}.zip s3://jenkins-deploy-dataengg-tut/scripts/
                                rm -rf ${directory%?}.zip
                                cd ..
                            done
                        '''
                    }
                }
            }
        }
        stage('Lambda Deployment') {
            steps {
                script {
                        sh '''
                            terraform init
                            terraform plan
                            terraform apply -auto-approve
                        '''
                    }
            }
        }
    }
}
